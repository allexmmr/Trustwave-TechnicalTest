@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron">
    <h3 class="text-center">Welcome to my Technical Test for Trustwave</h3>
    <h4>This is a coding project for Senior Full Stack Developer at Trustwave.</h4>
    <h5>I am using ASP.NET Core MVC C#, Web API, interfaces, design principle of inversion of control (IoC), singleton design pattern, Bootstrap and more.</h5>
</div>

<div class="row">
    <form>
        <div class="row">
            <div class="form-group col-md-8">
                <input name="domain" placeholder="domain e.g. yahoo.com" class="form-control" />
            </div>
            <div class="form-group col-md-4">
                <button id="list-subdomains" type="button" class="btn btn-primary">List Subdomains</button>
                <button id="find-ip-addresses" type="button" class="btn btn-primary">Find IP Addresses</button>
            </div>
        </div>
    </form>
    <div id="result" class="alert" role="alert" style="display: none;">
    </div>
</div>